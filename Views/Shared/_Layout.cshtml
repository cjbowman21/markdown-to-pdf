<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - md-pdf</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Domine:wght@600&display=swap" rel="stylesheet">

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme -->
    <link href="~/css/theme.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="bg-app text-app">
    <header class="border-bottom bg-surface">
        <nav class="container d-flex align-items-center justify-content-between py-3">
            <a class="d-flex align-items-center gap-2 text-decoration-none text-app" href="@Url.Action("Index","Home")">
                <svg width="24" height="24" aria-hidden="true"><use href="#icon-doc"></use></svg>
                <span class="fw-semibold">md-pdf</span>
            </a>
            <div class="d-flex align-items-center gap-2">
                <button id="themeToggle" class="btn btn-sm btn-ghost" type="button">ðŸŒ“</button>
                <a class="btn btn-sm btn-outline" href="https://github.com/cjbowman21/markdown-to-pdf" target="_blank" rel="noopener">GitHub</a>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="container py-4 small text-muted border-top">
        <div class="d-flex justify-content-between">
            <span>Â© @DateTime.UtcNow.Year md-pdf v@(typeof(Program).Assembly.GetName().Version)</span>
            <div class="d-flex gap-3">
                <a class="link-muted" href="@Url.Action("Privacy","Home")">Privacy</a>
                <a class="link-muted" href="https://github.com/cjbowman21/markdown-to-pdf" target="_blank" rel="noopener">GitHub</a>
            </div>
        </div>
    </footer>

    <script>
      const html = document.documentElement;
      const btn = document.getElementById('themeToggle');
      btn?.addEventListener('click', () => {
        html.dataset.theme = html.dataset.theme === 'dark' ? 'light' : 'dark';
        localStorage.setItem('theme', html.dataset.theme);
      });
      const saved = localStorage.getItem('theme');
      if (saved) html.dataset.theme = saved;
      else if (window.matchMedia('(prefers-color-scheme: dark)').matches) html.dataset.theme = 'dark';
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional icons sprite -->
    <svg width="0" height="0" style="position:absolute">
      <symbol id="icon-doc" viewBox="0 0 24 24">
        <path d="M6 2h9l5 5v15a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2zM15 2v5h5" />
      </symbol>
    </svg>

    @RenderSection("Scripts", required: false)
</body>
</html>

